<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".GetReadings">

    <TextView android:text="Result Data"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20dp"
              android:textColor="#fff"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.022"
              app:layout_constraintHorizontal_bias="0.0"/>

    <TextView android:text="Meter Reading"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#d3d3d2 "
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.077"
              app:layout_constraintHorizontal_bias="0.0"/>

    <TextView android:text="Unit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#d3d3d2 "
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.172"/>

    <TextView android:text="Block"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#d3d3d2 "
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.252"/>

    <TextView android:text="Floor"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#d3d3d2"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.332"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="123123.42"
              android:textColor="#ffff"
              android:background="@null"
              android:id="@+id/mReading_result"
              android:singleLine="true"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.114"
              app:layout_constraintHorizontal_bias="0.0"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="01"
              android:textColor="#ffff"
              android:maxLength="2"
              android:background="@null"
              android:id="@+id/unit_result"
              android:singleLine="true"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.21"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="A"
              android:textColor="#ffff"
              android:background="@null"
              android:id="@+id/block_Result"
              android:singleLine="true"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.289"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="01"
              android:textColor="#ffff"
              android:maxLength="2"
              android:background="@null"
              android:id="@+id/floor_Result"
              android:singleLine="true"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.373"/>

    <ImageView android:layout_width="410dp"
               android:layout_height="296dp"
               android:scaleType="centerCrop"
               android:src="@drawable/ic_image_black_24dp"
               android:id="@+id/image_view"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.832"/>

    <Button android:layout_width="425dp"
            android:layout_height="71dp"
            android:text="Confirm"
            android:id="@+id/button_confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.996"/>

</androidx.constraintlayout.widget.ConstraintLayout>